{
  "name": "minimal-llm-language",
  "displayName": "Minimal LLM Language",
  "version": "1.0.0",
  "description": "VS Code extension for the Minimal LLM Language",
  "main": "out/extension.js",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onLanguage:minimal-llm"
  ],
  "contributes": {
    "languages": [{
      "id": "minimal-llm",
      "aliases": ["Minimal LLM Language", "minimal-llm"],
      "extensions": [".a.i"],
      "configuration": "./language-configuration.json"
    }]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["language", "lsp"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.5.5"
  }
}
